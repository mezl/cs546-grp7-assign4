<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

<!-- The building codes search box on the top -->
<LinearLayout android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

   <!-- The edit box for specifying destination building codes -->
   <EditText android:id="@+id/search_editbox"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:singleLine="true"/>

   <!-- The button to launch the search operation -->
   <Button android:id="@+id/search_btn"
           android:text="@string/search_btn_label"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

</LinearLayout>

<!-- Below the destination search box, we display current location -->
<LinearLayout android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

   <TextView android:id="@+id/lat_view"
             android:layout_width="80dp"
             android:layout_height="fill_parent"/>

   <TextView android:id="@+id/lon_view"
             android:layout_width="80dp"
             android:layout_height="fill_parent"/>

</LinearLayout>

<!-- After the current location, we show the appropriate map tiles -->
<ImageView android:id="@+id/map_tile"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:scaleType="centerCrop"/>

<!-- Finally, at the bottom, the list of walking directions -->
<ListView android:id="@+id/directions"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"/>

</LinearLayout>

